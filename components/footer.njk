{# =========================
   FOOTER — Fade-up robuste (arrive du bas) + soulignement animé des liens
   ========================= #}

{% set _discordUrl  = 'https://discord.gg/zEcVQhTr' %}
{% set _telegramUrl = 'https://t.me/eliteboostsx' %}

{% set _discordImg  = 'https://i.postimg.cc/P56S6ntN/tts-discordlogo-old.png' %}
{% set _telegramImg = 'https://i.postimg.cc/TYJ7DWFV/2002-telegram.png' %}

<footer class="footer hyper-footer component" data-component-id="footer">
  <div class="container">
    <div class="row py-5 gy-4">

      <div class="col-12 col-lg-6 reveal">
        <div class="brand-wrap">
          <div class="brand-row">
            {% if shop.image_url %}
              <img src="{{ shop.image_url }}" alt="{{ shop.name or 'Elite Boosts' }}" class="brand-logo" />
            {% endif %}
            <p class="brand-name">{{ shop.name or 'Elite Boosts' }}</p>
          </div>

          <p class="brand-tagline">
            Premium Discord boosting services with instant delivery and
            24/7 dedicated support. Experience the difference with Elite Boosts.
          </p>

          <p class="brand-note">Elite Boosts is not affiliated with Discord by any means.</p>

          <div class="cta-row">
            <a href="{{ _discordUrl }}" target="_blank" rel="noopener" class="btn btn-social discord reveal">
              <span class="ico-brand discord" aria-hidden="true">
                <img src="{{ _discordImg }}" alt="Discord" class="ico-img" />
              </span>
              Join Discord
            </a>

            <a href="{{ '/products' | shopUrl }}" class="btn btn-outline-primary btn-ghost reveal">
              <span class="ico" aria-hidden="true">
                <svg viewBox="0 0 24 24" width="18" height="18"><path fill="currentColor" d="M7 22a2 2 0 1 1 0-4a2 2 0 0 1 0 4m10 0a2 2 0 1 1 0-4a2 2 0 0 1 0 4M3 2h2.15a2 2 0 0 1 1.93 1.48L7.6 6H20a1 1 0 0 1 .97 1.24l-1.82 7.28A3 3 0 0 1 16.22 17H9.78a3 3 0 0 1-2.9-2.48L5.05 4H3z"/></svg>
              </span>
              View Services
            </a>
          </div>
        </div>
      </div>

      <div class="col-6 col-md-4 col-lg-2 reveal">
        <h5 class="col-title">Navigation</h5>
        <ul class="footer-nav">
          <li><a href="{{ '/about'   | shopUrl }}">About Us</a></li>
          <li><a href="{{ '/feedback'| shopUrl }}">Feedback</a></li>
          <li><a href="{{ '/products'| shopUrl }}">Products</a></li>
          <li><a href="{{ '/features'| shopUrl }}">Features</a></li>
          <li><a href="{{ '/faq'     | shopUrl }}">FAQ</a></li>
          <li><a href="{{ '/terms'   | shopUrl }}">Terms Of Service</a></li>
        </ul>
      </div>

      <div class="col-6 col-md-4 col-lg-2 reveal">
        <h5 class="col-title">Support</h5>
        <ul class="footer-nav">
          <li>
            <a href="{{ _discordUrl }}" target="_blank" rel="noopener" class="social-link">
              <span class="ico-brand discord" aria-hidden="true">
                <img src="{{ _discordImg }}" alt="Discord" class="ico-img" />
              </span>
              Discord
            </a>
          </li>
          <li>
            <a href="{{ _telegramUrl }}" target="_blank" rel="noopener" class="social-link">
              <span class="ico-brand telegram" aria-hidden="true">
                <img src="{{ _telegramImg }}" alt="Telegram" class="ico-img" />
              </span>
              Telegram
            </a>
          </li>
        </ul>
      </div>

      
      <div class="col-12 col-md-4 col-lg-2 reveal">
        <h5 class="col-title">Contact</h5>
        <ul class="footer-nav">
          <li class="contact-pill">
            <span class="dot"></span>
            24/7 Support
          </li>
        </ul>
      </div>
    </div>

    <div class="row pb-3">
      <div class="col-12 reveal">
        <p class="copyright" data-seal></p>
        <span class="sr-only" aria-hidden="true">© 2025 Elite Boosts. All rights reserved.</span>
      </div>
    </div>
  </div>
</footer>

<style>
.footer.hyper-footer{
  --accent: var(--mono-accent,#ff5aa0);
  --ink:#eae3ee; --muted:#b9a9c0;
  --panel: rgba(255,255,255,.03);
  --ring: 0 18px 40px rgba(255,90,160,.22);
  color:var(--ink);
}
.footer.hyper-footer .brand-row{ display:flex; align-items:center; gap:10px; margin-bottom:8px }
.footer.hyper-footer .brand-logo{ height:40px; width:auto; border-radius:10px }
.footer.hyper-footer .brand-name{ font-weight:800; letter-spacing:.02em; margin:0 }
.footer.hyper-footer .brand-tagline{ color:var(--muted); margin:.5rem 0 .25rem }
.footer.hyper-footer .brand-note{ color:var(--muted); font-size:.9rem; margin-bottom:1rem }
.footer.hyper-footer .cta-row{ display:flex; gap:10px; flex-wrap:wrap }

.footer.hyper-footer .btn-ghost{
  display:inline-flex; align-items:center; gap:.6rem; padding:.6rem 1rem;
  border-radius:12px; font-weight:800; letter-spacing:.02em;
  border:1px solid color-mix(in oklab, var(--accent) 55%, transparent);
  color:var(--ink); background:transparent; transition:background .2s ease, transform .16s ease;
}
.footer.hyper-footer .btn-ghost:hover{ background:var(--panel); transform:translateY(-1px) }
.footer.hyper-footer .btn-social{
  display:inline-flex; align-items:center; gap:.6rem; padding:.6rem 1rem;
  border-radius:14px; font-weight:800; letter-spacing:.02em;
  color:#0f0b1a; box-shadow:var(--ring);
  transition:transform .16s ease, box-shadow .2s ease, filter .2s ease;
  background:linear-gradient(135deg,#8ea0ff,#5865f2);
}
.footer.hyper-footer .btn-social:hover{ transform:translateY(-1px); box-shadow:0 26px 58px rgba(0,0,0,.35) }

.footer.hyper-footer .col-title{
  font-weight:800; letter-spacing:.06em; text-transform:uppercase; margin-bottom:.75rem;
}
.footer.hyper-footer .col-title::after{
  content:""; display:block; width:84px; height:3px; margin-top:.4rem;
  background:linear-gradient(90deg,var(--accent),transparent);
  border-radius:999px;
}

.footer.hyper-footer .footer-nav{ list-style:none; padding:0; margin:0; display:grid; gap:.45rem }
.footer.hyper-footer .footer-nav a{
  color:var(--ink); text-decoration:none; display:inline-flex; align-items:center; gap:.55rem;
  padding:.25rem 0; transition:color .2s ease, transform .14s ease, text-shadow .2s ease;
}
.footer.hyper-footer .footer-nav a:hover{ color:#fff; transform:translateX(2px); text-shadow:0 0 8px rgba(255,255,255,.08) }

.footer.hyper-footer .footer-nav a{ position:relative; }
.footer.hyper-footer .footer-nav a::after{
  content:""; position:absolute; left:0; right:0; bottom:-3px; height:2px;
  background: linear-gradient(90deg, var(--accent), color-mix(in oklab, var(--accent) 10%, transparent));
  transform: scaleX(0); transform-origin: left; border-radius: 999px; opacity:.95;
  transition: transform .25s ease;
}
.footer.hyper-footer .footer-nav a:hover::after,
.footer.hyper-footer .footer-nav a:focus-visible::after{ transform: scaleX(1); }

.footer.hyper-footer .ico-brand{
  width:28px; height:28px; border-radius:50%;
  display:inline-flex; align-items:center; justify-content:center;
  box-shadow:inset 0 0 0 1px rgba(255,255,255,.08), 0 8px 22px rgba(0,0,0,.28);
  transition:transform .14s ease, box-shadow .2s ease, filter .2s ease;
  background:rgba(255,255,255,.06);
}
.footer.hyper-footer .ico-brand.discord{ background:radial-gradient(60% 60% at 30% 30%, #9fb0ff 0%, #6a79ff 48%, #5865F2 100%) }
.footer.hyper-footer .ico-brand.telegram{ background:radial-gradient(60% 60% at 30% 30%, #79d7ff 0%, #33b7f0 48%, #27A7E7 100%) }
.footer.hyper-footer .ico-brand .ico-img{ width:16px; height:16px; object-fit:contain; display:block; filter:none }
.footer.hyper-footer a:hover .ico-brand{ transform:translateY(-1px) }

.footer.hyper-footer .contact-pill{ display:inline-flex; align-items:center; gap:.5rem; color:var(--ink) }
.footer.hyper-footer .contact-pill .dot{
  width:8px; height:8px; background:linear-gradient(180deg,#81ffcf,#27e896); border-radius:50%; box-shadow:0 0 12px rgba(39,232,150,.55);
}

.footer.hyper-footer .copyright{ color:var(--muted); margin:0; font-size:.9rem; visibility:hidden; white-space:nowrap }
.footer.hyper-footer .sr-only{ position:absolute !important; width:1px; height:1px; padding:0; margin:-1px; overflow:hidden; clip:rect(0,0,0,0); white-space:nowrap; border:0 }

.footer.hyper-footer.anim-init .reveal{
  opacity:0 !important;
  transform:translateY(64px) !important; 
}
.footer.hyper-footer.anim-init.in .reveal{
  opacity:1 !important;
  transform:none !important;
  transition:opacity .7s ease, transform .7s cubic-bezier(.22,1,.36,1) !important;
}

@media (max-width: 992px){
  .footer.hyper-footer .brand-wrap{ max-width:680px }
}
@media (prefers-reduced-motion: reduce){
  .footer.hyper-footer .reveal{ opacity:1 !important; transform:none !important; transition:none !important }
}
</style>

