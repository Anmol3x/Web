<style>
.features[data-component-id="{{ componentId }}"]{
  --accent: var(--mono-accent, #ff5aa0);
  --accent-2:#ff88bd; --ink:#fff; --muted:#cbbfd0;
  --card: rgba(255,255,255,.04); --card-2: rgba(255,255,255,.02);
  --border: rgba(255,255,255,.14); --shadow: 0 24px 80px rgba(0,0,0,.45);
  --mx: 50%; --my: 50%;
}

.features[data-component-id="{{ componentId }}"] .features-head{
  display:grid; gap:10px; place-items:center; margin-bottom:30px;
}
.features[data-component-id="{{ componentId }}"] .features-pill span{
  display:inline-flex; gap:.55rem; align-items:center;
  padding:8px 14px; border-radius:999px; font-weight:800; letter-spacing:.02em;
  color:#1a0f16; background:linear-gradient(90deg,var(--accent-2),var(--accent));
  box-shadow:0 10px 24px rgba(255,90,160,.22), inset 0 1px 0 rgba(255,255,255,.35);
}
.features[data-component-id="{{ componentId }}"] .features-title{
  color:#fff; font-weight:900; letter-spacing:-.018em; line-height:1.05;
  font-size:clamp(38px, 5vw, 64px);
  text-shadow:0 2px 0 rgba(0,0,0,.20), 0 18px 40px rgba(0,0,0,.35);
}

.features[data-component-id="{{ componentId }}"] .feature-card{
  position:relative; height:100%; padding:28px 26px; border-radius:22px;
  background:
    radial-gradient(240px 160px at var(--mx) var(--my),
      color-mix(in oklab, var(--accent) 10%, transparent), transparent 60%),
    linear-gradient(180deg,var(--card),var(--card-2));
  border:1px solid var(--border); box-shadow: inset 0 1px 0 rgba(255,255,255,.06);
  display:flex; gap:20px; align-items:flex-start; overflow:hidden;
  transition: transform .25s cubic-bezier(.22,1,.24,1),
             border-color .25s ease, box-shadow .25s ease, background .2s ease, filter .25s ease;
  will-change: transform, filter, background;
}
.features[data-component-id="{{ componentId }}"] .feature-card:hover{
  transform:translateY(-6px) scale(1.01);
  border-color: color-mix(in oklab, var(--accent) 46%, var(--border));
  box-shadow: var(--shadow);
  filter: saturate(1.05);
}

.features[data-component-id="{{ componentId }}"] .feature-card::after{
  content:""; position:absolute; inset:-1px; border-radius:22px;
  background: conic-gradient(from 180deg at 50% 50%,
      color-mix(in oklab, var(--accent) 65%, transparent),
      transparent 16%, transparent 50%,
      color-mix(in oklab, var(--accent-2) 70%, transparent) 66%, transparent 82%, transparent 100%);
  -webkit-mask: linear-gradient(#000 0 0) content-box, linear-gradient(#000 0 0);
  -webkit-mask-composite: xor; mask-composite: exclude;
  padding:1px; opacity:0; transition:opacity .25s ease;
}
.features[data-component-id="{{ componentId }}"] .feature-card:hover::after{
  opacity:.6; 
}

.features[data-component-id="{{ componentId }}"] .shine{
  position:absolute; inset:-20%;
  transform:translateX(-120%) rotate(18deg);
  background: linear-gradient(90deg, transparent 0 38%, rgba(255,255,255,.14) 52%, transparent 70%);
  mix-blend-mode:screen; pointer-events:none; opacity:0;
}
.features[data-component-id="{{ componentId }}"] .feature-card:hover .shine{
  opacity:.55; animation:shine-move 2.2s cubic-bezier(.22,1,.24,1);
}
@keyframes shine-move{
  to { transform:translateX(120%) rotate(18deg); }
}

.features[data-component-id="{{ componentId }}"] .ico{
  width:64px;height:64px;min-width:64px;display:grid;place-items:center;border-radius:16px;
  background: linear-gradient(180deg, rgba(255,255,255,.06), rgba(255,255,255,.02));
  border:1px solid var(--border); box-shadow: inset 0 1px 0 rgba(255,255,255,.18);
  transition: transform .25s cubic-bezier(.22,1,.24,1), box-shadow .25s ease, border-color .25s ease;
}
.features[data-component-id="{{ componentId }}"] .ico i{
  font-size:26px;color:var(--accent); transition: transform .25s cubic-bezier(.22,1,.24,1), text-shadow .25s ease;
}
.features[data-component-id="{{ componentId }}"] .feature-card:hover .ico{
  transform: translateY(-2px) scale(1.05);
  border-color: color-mix(in oklab, var(--accent) 36%, var(--border));
  box-shadow: 0 8px 26px rgba(255,90,160,.22), inset 0 1px 0 rgba(255,255,255,.22);
}
.features[data-component-id="{{ componentId }}"] .feature-card:hover .ico i{
  text-shadow: 0 0 16px color-mix(in oklab, var(--accent) 60%, transparent);
}


.features[data-component-id="{{ componentId }}"] .feature-body{ flex:1; }
.features[data-component-id="{{ componentId }}"] .title{
  color:var(--ink); margin:4px 0 8px; font-weight:900; position:relative;
}
.features[data-component-id="{{ componentId }}"] .title::after{
  content:""; position:absolute; left:0; bottom:-6px; height:2px; width:100%;
  background: linear-gradient(90deg, var(--accent), transparent);
  transform: scaleX(0); transform-origin:left; transition: transform .35s cubic-bezier(.22,1,.24,1);
}
.features[data-component-id="{{ componentId }}"] .feature-card:hover .title::after{
  transform: scaleX(1);
}
.features[data-component-id="{{ componentId }}"] .description{ margin:0; color:var(--muted); }


.features[data-component-id="{{ componentId }}"] .halo{
  position:absolute; border-radius:50%; filter:blur(44px); opacity:.26; pointer-events:none;
}
.features[data-component-id="{{ componentId }}"] .halo.h1{
  width:260px;height:260px;left:-90px;bottom:-110px;
  background:radial-gradient(circle, color-mix(in oklab, var(--accent) 42%, transparent), transparent 60%);
  transition: transform .25s cubic-bezier(.22,1,.24,1);
}
.features[data-component-id="{{ componentId }}"] .halo.h2{
  width:200px;height:200px;right:-60px;top:-80px;
  background:radial-gradient(circle, color-mix(in oklab, var(--accent-2) 38%, transparent), transparent 60%);
  transition: transform .25s cubic-bezier(.22,1,.24,1);
}
.features[data-component-id="{{ componentId }}"] .feature-card:hover .halo.h1{
  transform: translateY(-4px);
}
.features[data-component-id="{{ componentId }}"] .feature-card:hover .halo.h2{
  transform: translateY(3px);
}

.features[data-component-id="{{ componentId }}"] .reveal{
  opacity:0; transform:translateY(16px); transition:opacity .6s ease, transform .6s ease;
}
.features[data-component-id="{{ componentId }}"] .reveal.in{ opacity:1; transform:none; }

@media (max-width:576px){
  .features[data-component-id="{{ componentId }}"] .feature-card{ padding:22px; }
  .features[data-component-id="{{ componentId }}"] .ico{ width:56px;height:56px;min-width:56px; }
}
</style>

<script>
(() => {
  const root = document.querySelector('.features[data-component-id="{{ componentId }}"]');
  if (!root) return;

  const items = [...root.querySelectorAll('.reveal')];
  const io = new IntersectionObserver((entries) => {
    entries.forEach(e => {
      if (e.isIntersecting){
        const i = Number(e.target.dataset.i || 0);
        e.target.style.transitionDelay = (i * 70) + 'ms';
        e.target.classList.add('in');
        io.unobserve(e.target);
      }
    });
  }, { threshold: .15 });
  items.forEach(el => io.observe(el));

  const cards = root.querySelectorAll('.feature-card');
  cards.forEach(card => {
    card.addEventListener('mousemove', (ev) => {
      const r = card.getBoundingClientRect();
      const x = ((ev.clientX - r.left) / r.width) * 100;
      const y = ((ev.clientY - r.top) / r.height) * 100;
      card.style.setProperty('--mx', x + '%');
      card.style.setProperty('--my', y + '%');
    });
    card.addEventListener('mouseleave', () => {
      card.style.removeProperty('--mx');
      card.style.removeProperty('--my');
    });
  });
})();
</script>