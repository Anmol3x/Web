  --accent: var(--mono-accent, #ff5aa0);
  --accent-2:#ff88bd;
  --ink:#f5f6fa;
  --muted:#cbbfd0;
  --glass: rgba(255,255,255,.06);
  --border: rgba(255,255,255,.12);
  --shadow: 0 22px 60px rgba(0,0,0,.40);
}

.product-wrapper[data-component-id="{{ componentId }}"] .variants{ gap:12px; }
.product-wrapper[data-component-id="{{ componentId }}"] .variants .variant{
  position:relative; display:flex; align-items:center; justify-content:space-between; gap:16px;
  padding:14px 16px; border-radius:16px; width:100%;
  background: linear-gradient(180deg, rgba(255,255,255,.045), rgba(255,255,255,.02));
  border:1px solid var(--border);
  color:var(--ink); text-align:left;
  transition: transform .18s ease, box-shadow .18s ease, border-color .18s ease, background .18s ease, opacity .18s ease;
  box-shadow:0 1px 0 rgba(255,255,255,.03), inset 0 1px 0 rgba(255,255,255,.04);
}
.product-wrapper[data-component-id="{{ componentId }}"] .variants .variant:hover{
  transform: translateY(-1px);
  border-color: color-mix(in oklab, var(--accent) 28%, var(--border));
  box-shadow: var(--shadow);
}
.product-wrapper[data-component-id="{{ componentId }}"] .variants .variant:disabled{
  opacity:.55; cursor:not-allowed; filter:grayscale(.1);
}
.product-wrapper[data-component-id="{{ componentId }}"] .variants .variant.active{
  background:
    radial-gradient(600px 200px at 10% 0%, color-mix(in oklab, var(--accent) 15%, transparent), transparent 60%),
    linear-gradient(180deg, rgba(255,255,255,.08), rgba(255,255,255,.03));
  border-color: color-mix(in oklab, var(--accent) 45%, var(--border));
}
.product-wrapper[data-component-id="{{ componentId }}"] .variants .variant .name{ font-weight:800; margin:0; letter-spacing:.01em; }
.product-wrapper[data-component-id="{{ componentId }}"] .variants .variant .description{ margin:2px 0 0; font-size:.9rem; color:var(--muted)!important; }
.product-wrapper[data-component-id="{{ componentId }}"] .variants .variant .stock{ margin:6px 0 0; font-size:.85rem; color:var(--muted) }
.product-wrapper[data-component-id="{{ componentId }}"] .variants .variant .stock-unlimited svg{ width:14px; height:14px; vertical-align:-2px; margin-right:4px; }

.product-wrapper[data-component-id="{{ componentId }}"] .variants .variant .price{
  margin-left:auto; text-align:right; display:flex; flex-direction:column; gap:2px; white-space:nowrap;
  font-weight:800;
}
.product-wrapper[data-component-id="{{ componentId }}"] .variants .variant .price > span{
  background: linear-gradient(90deg, var(--accent-2), var(--accent));
  -webkit-background-clip:text; background-clip:text; color:transparent;
  font-size:1.02rem;
}
.product-wrapper[data-component-id="{{ componentId }}"] .variants .variant .price s{ font-weight:600; opacity:.55; }

.product-wrapper[data-component-id="{{ componentId }}"] .variants .variant .active-indicator{
  position:absolute; right:10px; top:10px; width:22px; height:22px; display:grid; place-items:center;
  border-radius:999px; background:rgba(255,255,255,.08); border:1px solid var(--border);
}

.product-wrapper[data-component-id="{{ componentId }}"] .input-group .form-control{
  background:var(--glass); color:var(--ink); border:1px solid var(--border); box-shadow:none;
}
.product-wrapper[data-component-id="{{ componentId }}"] .input-group .btn{
  border-color:var(--border);
}
.product-wrapper[data-component-id="{{ componentId }}"] .form-text.text-danger{ margin-top:8px; }

.product-wrapper[data-component-id="{{ componentId }}"] .addon-item{
  background:linear-gradient(180deg, rgba(255,255,255,.045), rgba(255,255,255,.02));
  border:1px solid var(--border);
}
.product-wrapper[data-component-id="{{ componentId }}"] .addon-image{
  width:44px; height:44px; object-fit:cover; border:1px solid var(--border);
}


.product-wrapper[data-component-id="{{ componentId }}"] .buy-buttons .btn{
  height:52px; font-weight:900; letter-spacing:.01em; border-radius:14px; position:relative; overflow:hidden;
  transition: transform .2s ease, box-shadow .2s ease, border-color .2s ease, background .2s ease;
}
.product-wrapper[data-component-id="{{ componentId }}"] .buy-buttons .btn svg{ transition: transform .2s ease, opacity .2s ease; }

.product-wrapper[data-component-id="{{ componentId }}"] .buy-buttons .btn-primary{
  background:linear-gradient(90deg, var(--accent-2), var(--accent));
  border:none; box-shadow:0 14px 32px rgba(255,90,160,.28);
}
.product-wrapper[data-component-id="{{ componentId }}"] .buy-buttons .btn-primary:hover{
  transform: translateY(-1px);
  box-shadow:0 18px 48px rgba(255,90,160,.36);
}
.product-wrapper[data-component-id="{{ componentId }}"] .buy-buttons .btn-primary:hover svg{ transform: translateX(3px); }

.product-wrapper[data-component-id="{{ componentId }}"] .buy-buttons .btn-outline-primary{
  border:1px solid color-mix(in oklab, var(--accent) 50%, #fff0);
  color:var(--ink);
  background:linear-gradient(180deg, rgba(255,255,255,.04), rgba(255,255,255,.015));
}
.product-wrapper[data-component-id="{{ componentId }}"] .buy-buttons .btn-outline-primary:hover{
  border-color: color-mix(in oklab, var(--accent) 70%, #fff0);
  background:
    radial-gradient(600px 200px at 20% 0%, color-mix(in oklab, var(--accent) 14%, transparent), transparent 60%),
    linear-gradient(180deg, rgba(255,255,255,.07), rgba(255,255,255,.02));
  transform: translateY(-1px);
}
.product-wrapper[data-component-id="{{ componentId }}"] .buy-buttons .btn-outline-primary:hover svg{ transform: translateX(3px); }

.product-wrapper[data-component-id="{{ componentId }}"] .btn .ripple{
  position:absolute; inset:auto; border-radius:50%; pointer-events:none; transform:translate(-50%,-50%);
  width:8px; height:8px; background:rgba(255,255,255,.35); animation:ripple .6s ease-out forwards;
}
@keyframes ripple{ from{opacity:.6; transform:translate(-50%,-50%) scale(.8)} to{opacity:0; transform:translate(-50%,-50%) scale(18)} }

.animate-spin{ animation:spin .9s linear infinite }
@keyframes spin{to{transform:rotate(360deg)}}
</style>

<script>
(() => {
  const root = document.querySelector('.product-wrapper[data-component-id="{{ componentId }}"]');
  if (!root) return;
  root.querySelectorAll('.buy-buttons .btn').forEach(btn => {
    btn.addEventListener('click', (e) => {
      const r = document.createElement('span');
      r.className = 'ripple';
      const rect = btn.getBoundingClientRect();
      r.style.left = (e.clientX - rect.left) + 'px';
      r.style.top  = (e.clientY - rect.top)  + 'px';
      btn.appendChild(r);
      setTimeout(() => r.remove(), 650);
    });
  });
})();
</script>